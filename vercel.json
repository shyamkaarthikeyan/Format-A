{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "installCommand": "npm install",
  "framework": "vite",
  "functions": {
    "api/**/*.ts": {
      "runtime": "nodejs18.x"
    }
  },
  "rewrites": [
    {
      "source": "/((?!api).*)",
      "destination": "/dist/index.html"
    }
  ],
  "env": {
    "PYTHON_PATH": "/usr/bin/python3",
    "SKIP_DOCX2PDF": "true"
  }
}