{
  "buildCommand": "rm -rf node_modules package-lock.json && npm install && npm run build",
  "outputDirectory": "dist",
  "installCommand": "npm install",
  "framework": "vite",
  "env": {
    "PYTHON_VERSION": "3.9",
    "NODE_ENV": "production"
  },

  "functions": {
    "api/generate.ts": {
      "memory": 1024,
      "maxDuration": 30,
      "includeFiles": "api/_lib/**,server/**"
    },
    "api/auth.ts": {
      "memory": 512,
      "maxDuration": 30,
      "includeFiles": "api/_lib/**"
    },
    "api/admin.ts": {
      "memory": 512,
      "maxDuration": 30,
      "includeFiles": "api/_lib/**"
    },
    "api/core.ts": {
      "memory": 512,
      "maxDuration": 30,
      "includeFiles": "api/_lib/**"
    },
    "api/documents.ts": {
      "memory": 512,
      "maxDuration": 30,
      "includeFiles": "api/_lib/**"
    }
  },

  "rewrites": [
    {
      "source": "/api/admin/analytics/(.*)",
      "destination": "/api/admin?path=analytics/$1"
    },
    {
      "source": "/api/admin/(.*)",
      "destination": "/api/admin?path=$1"
    },
    {
      "source": "/api/auth/(.*)",
      "destination": "/api/auth?path=$1"
    },
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/((?!api).*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, PUT, DELETE, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, Authorization, X-Admin-Token"
        },
        {
          "key": "Access-Control-Allow-Credentials",
          "value": "true"
        }
      ]
    },
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}