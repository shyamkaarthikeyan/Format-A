{
  "buildCommand": "rm -rf node_modules package-lock.json && npm install && npm run build",
  "outputDirectory": "dist",
  "installCommand": "npm install",
  "framework": "vite",

  "build": {
    "env": {
      "PYTHONPATH": "/var/task:/var/task/api",
      "PYTHON_UNBUFFERED": "1",
      "TMPDIR": "/tmp"
    }
  },
  "env": {
    "PYTHONPATH": "/var/task:/var/task/api",
    "PYTHON_UNBUFFERED": "1",
    "TMPDIR": "/tmp",
    "PYTHON_ENV": "production"
  },

  "rewrites": [
    {
      "source": "/api/admin/analytics/(.*)",
      "destination": "/api/admin?path=analytics/$1"
    },
    {
      "source": "/api/admin/(.*)",
      "destination": "/api/admin?path=$1"
    },
    {
      "source": "/api/auth/(.*)",
      "destination": "/api/auth?path=$1"
    },
    {
      "source": "/api/health",
      "destination": "/api/core?path=health"
    },
    {
      "source": "/api/health-python",
      "destination": "/api/health-python"
    },
    {
      "source": "/api/test-python",
      "destination": "/api/test-python"
    },
    {
      "source": "/api/test-production-validation",
      "destination": "/api/test-production-validation"
    },
    {
      "source": "/api/health-monitoring",
      "destination": "/api/health-monitoring"
    },
    {
      "source": "/api/generate-pdf",
      "destination": "/api/generate-pdf"
    },
    {
      "source": "/api/convert-docx-pdf",
      "destination": "/api/convert-docx-pdf"
    },
    {
      "source": "/api/python-utils",
      "destination": "/api/python_utils"
    },
    {
      "source": "/api/generate/preview-images",
      "destination": "/api/generate/preview-images"
    },
    {
      "source": "/api/generate/docx-to-pdf",
      "destination": "/api/generate/docx-to-pdf"
    },
    {
      "source": "/api/generate/docx",
      "destination": "/api/generate/docx"
    },
    {
      "source": "/api/generate/email",
      "destination": "/api/generate/email"
    },
    {
      "source": "/api/generate/(.*)",
      "destination": "/api/documents?path=$1"
    },
    {
      "source": "/api/generate",
      "destination": "/api/documents?path=generate"
    },
    {
      "source": "/api/diagnostics",
      "destination": "/api/core?path=diagnostics"
    },
    {
      "source": "/api/index",
      "destination": "/api/core?path=index"
    },
    {
      "source": "/api/test-auth-dependencies",
      "destination": "/api/testing?path=auth-dependencies"
    },
    {
      "source": "/api/test-simple-auth",
      "destination": "/api/testing?path=simple-auth"
    },
    {
      "source": "/api/test-users",
      "destination": "/api/testing?path=users"
    },
    {
      "source": "/api/utils",
      "destination": "/api/testing?path=utils"
    },
    {
      "source": "/api/cleanup-fake-data",
      "destination": "/api/testing?path=cleanup-fake-data"
    },
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/((?!api).*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, PUT, DELETE, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, Authorization, X-Admin-Token"
        },
        {
          "key": "Access-Control-Allow-Credentials",
          "value": "true"
        }
      ]
    },
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}